<!DOCTYPE html>
<html>
<head>
  <title>Custom Commands</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    .commands-container {
      max-width: 800px;
      margin: 0 auto;
      background: #2c2c3e;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    .commands-container h1 {
      color: #61dafb;
      margin-bottom: 20px;
      text-align: center;
    }

    .command-list {
      margin-bottom: 30px;
    }

    .command-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #1e1e2f;
      padding: 12px 16px;
      border-radius: 6px;
      margin-bottom: 10px;
    }

    .command-item span {
      font-family: monospace;
      color: #f0f0f0;
    }

    .command-item form {
      margin: 0;
    }

    .command-item button {
      background: #dc3545;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
    }

    .command-item button:hover {
      background: #b02a37;
    }

    .add-command-form {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .add-command-form input {
      padding: 10px;
      border: none;
      border-radius: 6px;
      background: #1e1e2f;
      color: #f0f0f0;
      font-size: 16px;
    }

    .add-command-form button {
      background: #5865F2;
      color: white;
      border: none;
      padding: 10px;
      font-weight: bold;
      border-radius: 6px;
      cursor: pointer;
    }

    .add-command-form button:hover {
      background: #4752c4;
    }

    .back-button {
      display: inline-block;
      margin-top: 20px;
      color: #61dafb;
      text-decoration: none;
      font-weight: bold;
    }

    .back-button:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="commands-container">
    <h1>⚙️ Custom Commands</h1>

    <div class="command-list">
      <% Object.entries(commands).forEach(([trigger, response]) => { %>
        <div class="command-item">
          <span><strong><%= trigger %></strong> → <%= response %></span>
          <form method="POST" action="/commands/delete">
            <input type="hidden" name="trigger" value="<%= trigger %>">
            <button type="submit">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>

    <form class="add-command-form" method="POST" action="/commands/add">
      <input type="text" name="trigger" placeholder="Command trigger (e.g. ping)" required>
      <input type="text" name="response" placeholder="Command response (e.g. Pong!)" required>
      <button type="submit">➕ Add Command</button>
    </form>

    <a href="/menu" class="back-button">← Back to Menu</a>
  </div>
</body>
</html>